{
  "name": "open-recipe-platform-site",
  "version": "0.0.1",
  "description": "React client for the open-recipe-platform",
  "author": "Peet Janse van Vuuren",
  "license": "GPL-3.0-only",
  "main": "src/index.tsx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peetjvv/open-recipe-platform.git"
  },
  "scripts": {
    "test": "jest --coverage --coverageDirectory='./jest-results/coverage'",
    "start": "webpack serve --mode=development",
    "clean": "rimraf build",
    "build": "npm run clean && webpack --mode=production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,scss,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./jest-results",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "firebase": "^8.4.2",
    "http-status-codes": "^1.4.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^26.6.2",
    "@testing-library/react": "^11.2.6",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.7",
    "autoprefixer": "^10.2.5",
    "css-loader": "^5.2.4",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^10.5.4",
    "modernizr-loader": "^1.0.1",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.13",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass-loader": "11.0.1",
    "style-loader": "^2.0.0",
    "tailwindcss": "^2.1.2",
    "ts-jest": "^26.5.5",
    "ts-loader": "^8.2.0",
    "typescript": "^4.2.4",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  }
}
